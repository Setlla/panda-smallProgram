<!--pages/addCourier/addCourier.wxml-->
<view class="content">
  <view>
    <view class="input-item">
      <text>姓名：</text><input bindblur='getName' value='{{name}}' placeholder="请输入真实姓名"/>
    </view>
    <view class="input-item">
      <text>电话号码： </text> <input bindblur='getPhone' value="{{mPhone}}" placeholder="请输入电话号码"/>
    </view>
    <view class="input-item">
      <picker bindchange="getSiteID" range-key="name" value="{{siteIndex}}" range="{{sitesData}}">
        <view class="picker">
          所属站点：{{siteIndex < 0 ? "选择站点" : sitesData[siteIndex].name}}
        </view>
      </picker>
    </view>
    <view>
      <button type="primary" bindtap="addCourier" > 注册为快递员 </button>
    </view>
  </view>
</view>